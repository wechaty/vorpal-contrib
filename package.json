{
  "name": "wechaty-vorpal-contrib",
  "version": "0.6.51",
  "description": "Wechaty Chat CLI (Command Line Interface), Powered by Vorpal",
  "main": "dist/src/mod.js",
  "typings": "dist/src/mod.d.ts",
  "engines": {
    "wechaty-vorpal": ">=0.6.1"
  },
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && tsc",
    "pack": "npm pack",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:md",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tsc --noEmit",
    "example": "ts-node examples/ding-dong-bot.ts",
    "start": "npm run example",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "blue-tape -r ts-node/register \"src/**/*.spec.ts\" \"src/*.spec.ts\" \"tests/*.spec.ts\" \"tests/**/*.spec.ts\"",
    "lint:es": "eslint --ignore-pattern tests/fixtures/ '{bin,examples,scripts,src,tests}/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wechaty/wechaty-vorpal-contrib.git"
  },
  "keywords": [
    "Wechaty",
    "CLI",
    "ChatOps",
    "Vorpal",
    "Contrib"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/wechaty/wechaty-vorpal-contrib/issues"
  },
  "homepage": "https://github.com/wechaty/wechaty-vorpal-contrib#readme",
  "devDependencies": {
    "@chatie/eslint-config": "^0.12.1",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^0.10.1",
    "@types/ip": "^1.1.0",
    "@types/json-stringify-safe": "^5.0.0",
    "pkg-jq": "^0.2.4",
    "shx": "^0.3.3",
    "tstest": "^0.4.10",
    "wechaty": "^0.62.3",
    "wechaty-mocker": "^0.3.4",
    "wechaty-puppet-mock": "^0.28.1",
    "wechaty-vorpal": "^0.6.12"
  },
  "dependencies": {
    "cash": "^0.8.0",
    "ip": "^1.1.5",
    "json-stringify-safe": "^5.0.1",
    "moment": "^2.29.1",
    "public-ip": "^4.0.2",
    "read-pkg-up": "^7.0.1",
    "utility-types": "^3.10.0"
  },
  "peerDependencies": {
    "wechaty-vorpal": "*"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  },
  "publishConfig": {
    "tag": "next"
  }
}
